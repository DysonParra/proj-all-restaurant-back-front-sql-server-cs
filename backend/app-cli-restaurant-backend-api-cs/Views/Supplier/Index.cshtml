@model IEnumerable<Project.Models.Supplier>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StrSupplierCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TxtSupplierName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IntPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IntChefId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StrSupplierCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TxtSupplierName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IntPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IntChefId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IntSupplierId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IntSupplierId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IntSupplierId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
